<script>
  $(document).ready(function () {
  let appliedCoupon = null;

  $(".apply-coupon-btn").on("click", function () {
    const couponItem = $(this).closest(".coupon-item");
    const couponCode = couponItem.data("coupon-code");
    const discountAmount = parseFloat(couponItem.data("discount"));
    
    const subtotal = parseFloat($("#subtotal").text());
    
    const minimumPurchaseText = couponItem.find(".coupon-conditions small").first().text();
    const minimumPurchaseAmount = parseFloat(minimumPurchaseText.split("₹")[1]);

    if (subtotal < minimumPurchaseAmount) {
      Swal.fire({
        icon: "warning",
        title: "Coupon Not Applicable",
        text: `This coupon requires a minimum purchase of ₹${minimumPurchaseAmount}`,
      });
      return;
    }

    const finalTotal = subtotal - discountAmount;

    $("#couponDiscount").text(discountAmount.toFixed(2));
    $("#final-total").text(`₹${finalTotal.toFixed(2)}`);
    $("#total").val(finalTotal.toFixed(2));

    appliedCoupon = {
      code: couponCode,
      discountAmount: discountAmount
    };

    $("#applied-coupon-display").html(`
      <div class="alert alert-success" data-coupon-code="${couponCode}">
        ${couponCode} applied: ₹${discountAmount.toFixed(2)}
        <button class="btn btn-sm btn-link remove-coupon-btn">Remove</button>
      </div>
    `);

    $("#couponModal").modal("hide");

    $.ajax({
      url: "/apply-coupon",
      method: "POST",
      data: {
        couponCode: couponCode,
        totalAmount: subtotal,
      },
      success: function (response) {
        if (!response.success) {
          removeCoupon();
          Swal.fire({
            icon: "error",
            title: "Coupon Application Failed",
            text: response.message,
          });
        }
      },
      error: function () {
        removeCoupon();
        Swal.fire({
          icon: "error",
          title: "Error",
          text: "Could not apply coupon. Please try again.",
        });
      },
    });
  });

  function getAppliedCouponCode() {
    const couponDisplay = $("#applied-coupon-display .alert-success");
    return couponDisplay.length > 0 ? couponDisplay.data("coupon-code") : "";
  }

  function removeCoupon() {
    const subtotal = parseFloat($("#subtotal").text());
    
    $("#couponDiscount").text("0.00");
    $("#final-total").text(`₹${subtotal.toFixed(2)}`);
    $("#total").val(subtotal.toFixed(2));
    $("#applied-coupon-display").empty();
    appliedCoupon = null;
  }

  $(document).on("click", ".remove-coupon-btn", function () {
    removeCoupon();

    $.ajax({
      url: "/remove-coupon",
      method: "POST",
      success: function (response) {
        if (!response.success) {
          Swal.fire({
            icon: "error",
            title: "Error",
            text: "Could not remove coupon. Please try again.",
          });
        }
      },
    });
  });

  const addressModal = $("#addressModal");
  const addressForm = $("#addressForm");
  
  $(".btn-outline-info").click(function(e) {
    e.preventDefault();
    $("#addressModalLabel").text("Add New Address");
    addressForm[0].reset();
    $("#addressId").val("");
    clearErrors();
    addressModal.modal("show");
  });

  $(document).on("click", ".btn-outline-primary", function() {
    const addressId = $(this).data("id");
    $("#addressModalLabel").text("Edit Address");
    clearErrors();
    
    $.ajax({
        url: `/getAddress/${addressId}`,
        method: "GET",
        success: function(response) {
            if (response.success && response.address) {
                const address = response.address;
                $("#addressId").val(addressId);
                $("#addressType").val(address.addressType);
                $("#name").val(address.name);
                $("#city").val(address.city);
                $("#landMark").val(address.landMark);
                $("#state").val(address.state);
                $("#pincode").val(address.pincode);
                $("#phone").val(address.phone);
                $("#altPhone").val(address.altPhone);
                $("#addressModal").modal("show");
            } else {
                Swal.fire({
                    icon: "error",
                    title: "Error",
                    text: response.message || "Could not fetch address details"
                });
            }
        },
        error: function(xhr) {
            Swal.fire({
                icon: "error",
                title: "Error",
                text: xhr.responseJSON?.message || "Failed to fetch address details"
            });
        }
    });
  });

  function createAddressHTML(address) {
    return `
      <div class="address-card">
        <input
          type="radio"
          name="deliveryAddress"
          value="${address._id}"
          id="address-${address._id}"
        />
        <strong>${address.name}</strong>
        <div class="address-details">
          ${address.landMark}, ${address.city}, ${address.state}, ${address.pincode}
        </div>
        <button type="button" class="btn btn-outline-primary" style="border-radius: 5px; padding-bottom: 2px; margin-top: 2px;" data-id="${address._id}">Edit</button>
      </div>
    `;
  }

  function addAddressToDom(address) {
    const savedAddressesContainer = $("#saved-addresses");
    const newAddressHTML = createAddressHTML(address);
    
    if (savedAddressesContainer.children().length === 0) {
      savedAddressesContainer.html(newAddressHTML);
    } else {
      savedAddressesContainer.append(newAddressHTML);
    }
  }

  function updateAddressInDom(addressId, updatedAddress) {
    const existingAddressCard = $(`#address-${addressId}`).closest('.address-card');
    const updatedAddressHTML = createAddressHTML(updatedAddress);
    existingAddressCard.replaceWith(updatedAddressHTML);
  }

  function clearErrors() {
    $(".form-group").removeClass("error");
    $(".error-message").text("").hide();
  }

  function showError(field, message) {
    const fieldElement = $("#" + field);
    fieldElement.closest(".form-group").addClass("error");
    $("#" + field + "-error").text(message).show();
    return false;
  }

  function validatePhoneNumber(phoneNumber, fieldName) {
    // Empty check handled separately
    if (!phoneNumber) {
      return fieldName === "phone" ? showError(fieldName, "Phone number is required") : true;
    }
    
    // Check if it's 10 digits
    if (!/^\d{10}$/.test(phoneNumber)) {
      return showError(fieldName, "Phone number must be exactly 10 digits");
    }
    
    // Check if it starts with 0
    if (phoneNumber.startsWith("0")) {
      return showError(fieldName, "Phone number cannot start with 0");
    }
    
    // Check if it starts with 6 or higher
    if (parseInt(phoneNumber.charAt(0)) < 6) {
      return showError(fieldName, "Phone number must start with 6 or higher");
    }
    
    // Check for repeated zeros (more than two in a row)
    if (phoneNumber.includes("000")) {
      return showError(fieldName, "Phone number cannot have more than two zeros in a row");
    }
    
    // Check if it's all zeros
    if (/^0+$/.test(phoneNumber)) {
      return showError(fieldName, "Phone number cannot be all zeros");
    }
    
    return true;
  }

  function validateForm() {
    clearErrors();
    let isValid = true;
    
    // Required fields
    const requiredFields = [
      { field: "addressType", message: "Address type is required" },
      { field: "name", message: "Full name is required" },
      { field: "city", message: "City is required" },
      { field: "landMark", message: "Landmark is required" },
      { field: "state", message: "State is required" },
      { field: "pincode", message: "Pincode is required" },
      { field: "phone", message: "Phone number is required" },
      { field: "altPhone", message: "Alternative phone number is required" }
    ];
    
    requiredFields.forEach(item => {
      const value = $("#" + item.field).val().trim();
      if (!value) {
        isValid = showError(item.field, item.message) && isValid;
      }
    });
    
    // Pincode validation
    const pincode = $("#pincode").val().trim();
    if (pincode && !/^\d{6}$/.test(pincode)) {
      isValid = showError("pincode", "Pincode must be exactly 6 digits") && isValid;
    }
    
    // Phone number validation
    const phone = $("#phone").val().trim();
    isValid = validatePhoneNumber(phone, "phone") && isValid;
    
    // Alt phone validation (if provided)
    const altPhone = $("#altPhone").val().trim();
    if (altPhone) {
      isValid = validatePhoneNumber(altPhone, "altPhone") && isValid;
    }
    
    // Check if both phone numbers are same
    if (phone && altPhone && phone === altPhone) {
      isValid = showError("altPhone", "Alternative phone number cannot be the same as primary phone number") && isValid;
    }
    
    return isValid;
  }

  addressForm.submit(function(e) {
    e.preventDefault();
    
    if (!validateForm()) {
      return;
    }
    
    const addressId = $("#addressId").val();
    const formData = {
      addressType: $("#addressType").val().trim(),
      name: $("#name").val().trim(),
      phone: $("#phone").val().trim(),
      altPhone: $("#altPhone").val().trim() ,
      landMark: $("#landMark").val().trim(),
      city: $("#city").val().trim(),
      state: $("#state").val().trim(),
      pincode: $("#pincode").val().trim()
    };

    const url = addressId ? `/editAddressCheckout/${addressId}` : '/addAddressCheckout';
    const method = addressId ? 'PUT' : 'POST';

    $.ajax({
      url: url,
      method: method,
      data: JSON.stringify(formData),
      contentType: 'application/json',
      success: function(response) {
        if (response && (response._id || response.address)) {
          if (addressId) {
            updateAddressInDom(addressId, response);
          } else {
            const newAddress = response.address ? response.address[response.address.length - 1] : response;
            addAddressToDom(newAddress);
          }

          addressModal.modal("hide");
          Swal.fire({
            icon: "success",
            title: "Success!",
            text: `Address ${addressId ? 'updated' : 'added'} successfully`,
            timer: 2000,
            showConfirmButton: false
          });

          addressForm[0].reset();
        } else {
          Swal.fire({
            icon: "error",
            title: "Error",
            text: "Invalid response from server. Please try again."
          });
        }
      },
      error: function(xhr, status, error) {
        console.error("Address submission error:", error);
        Swal.fire({
          icon: "error",
          title: "Error",
          text: xhr.responseJSON?.message || "Failed to save address. Please try again."
        });
      }
    });
  });

  $(".close").click(function() {
    addressModal.modal("hide");
  });

  $("#place-order").click(function () {
    const selectedAddress = document.querySelector('input[name="deliveryAddress"]:checked');
    if (!selectedAddress) {
      Swal.fire({
        title: "Error",
        text: "Please select a delivery address.",
        icon: "error",
        confirmButtonText: "OK",
      });
      return;
    }
    const addressId = selectedAddress.value;

    const cartElement = document.querySelector("[data-cart-id]");
    const cartId = cartElement.getAttribute("data-cart-id");

    const selectedPayment = document.querySelector('input[name="paymentMethod"]:checked');
    if (!selectedPayment) {
      Swal.fire({
        title: "Error",
        text: "Please select a payment method.",
        icon: "error",
        confirmButtonText: "OK",
      });
      return;
    }
    const paymentMethod = selectedPayment.value;

    const couponDiscount = parseFloat($("#couponDiscount").text()) || 0;
    const subtotal = parseFloat($("#subtotal").text());
    const finalTotal = parseFloat($("#total").val());
    const couponCode = getAppliedCouponCode();

    if (paymentMethod === "COD") {
      placeOrder(addressId, cartId, paymentMethod, couponCode, subtotal, couponDiscount, finalTotal);
    } else if (paymentMethod === "Online") {
      initiateRazorpayPayment(addressId, cartId, paymentMethod, couponCode, subtotal, couponDiscount, finalTotal);
    } else if (paymentMethod === "wallet") {
      processWalletPayment(addressId, cartId, paymentMethod, couponCode, subtotal, couponDiscount, finalTotal);
    }
  });
  function placeOrder(addressId, cartId, paymentMethod, couponCode, subtotal, couponDiscount, finalTotal) {
  $.ajax({
    url: "/create-order",
    method: "POST",
    contentType: "application/json",
    data: JSON.stringify({
      addressId: addressId,
      cartId: cartId,
      paymentMethod: paymentMethod,
      couponCode: couponCode,
      subtotal: subtotal,
      couponDiscount: couponDiscount,
      finalAmount: finalTotal
    }),
    success: function (data) {
      if (data.success) {
        Swal.fire({
          title: "Order Placed Successfully!",
          text: "Thank you for your order. You will be redirected shortly.",
          icon: "success",
          confirmButtonText: "OK",
          timerProgressBar: true,
        });
        window.location.href = `/order-confirmation?orderId=${data.orderId}`;
      } else {
        Swal.fire({
          title: "Error",
          text: data.message || "An error occurred while placing your order.",
          icon: "error",
          confirmButtonText: "OK",
        });
      }
    },
    error: function (error) {
      Swal.fire({
        title: "Error",
        text: error.responseJSON?.message || "An error occurred while placing your order.",
        icon: "error",
        confirmButtonText: "OK",
      });
    },
  });
}


  async function initiateRazorpayPayment(addressId, cartId, paymentMethod, couponCode, subtotal, couponDiscount, finalTotal) {
    try {
      const response = await fetch("/placeOrderRazorPay", {
        method: "POST",
        headers: {
          "Content-Type": "application/json",
        },
        body: JSON.stringify({ 
          totalAmount: finalTotal,
          subtotal: subtotal,
          couponDiscount: couponDiscount,
          couponCode: couponCode,
          cartId: cartId
        }),
      });
      
      const data = await response.json();
      if (data.success) {
        const { orderId, amount, currency, key } = data;

        const options = {
          key,
          amount: amount,
          currency,
          name: "Time Edge",
          description: "Order Payment",
          order_id: orderId,
          handler: async function (response) {
            const paymentId = response.razorpay_payment_id;
            const razorpaySignature = response.razorpay_signature;
            const orderId = response.razorpay_order_id;

            const verifyResponse = await fetch("/verifyRazorPayOrder", {
              method: "POST",
              headers: {
                "Content-Type": "application/json",
              },
              body: JSON.stringify({
                addressId,
                paymentMethod,
                couponCode,
                orderId,
                paymentId,
                cartId,
                razorpaySignature,
                subtotal,
                couponDiscount,
                finalAmount: finalTotal
              }),
            });

            const verifyData = await verifyResponse.json();
            if (verifyData.success) {
              Swal.fire({
                title: "Payment Success",
                text: "Order Placed Successfully.",
                icon: "success",
                confirmButtonText: "OK",
              }).then(() => (window.location.href = "/order-confirmation"));
            } else {
              Swal.fire({
                icon: "error",
                title: "Payment Failed",
                text: "Payment verification failed. Please try again.",
                confirmButtonText: "OK",
              });
            }
          },
          modal: {
            ondismiss: async function () {
              try {
                const cancelResponse = await fetch("/verifyRazorPayOrder", {
                  method: "POST",
                  headers: {
                    "Content-Type": "application/json",
                  },
                  body: JSON.stringify({
                    addressId,
                    paymentMethod,
                    couponCode,
                    orderId: data.orderId,
                    paymentId: null,
                    cartId,
                    razorpaySignature: null,
                    paymentStatus: "Failed",
                    subtotal,
                    couponDiscount,
                    finalAmount: finalTotal
                  }),
                });

                const cancelData = await cancelResponse.json();
                Swal.fire({
                  icon: "error",
                  title: "Payment Failed",
                  text: "Your payment was unsuccessful.",
                  confirmButtonText: "OK",
                }).then(() => (window.location.href = "/cart"));
              } catch (error) {
                console.error("Error handling payment cancellation:", error);
                Swal.fire({
                  icon: "error",
                  title: "Error",
                  text: "An error occurred while handling payment cancellation.",
                  confirmButtonText: "OK",
                });
              }
            },
          },
          theme: { color: "#3399cc" },
        };

        const rzp = new Razorpay(options);
        rzp.open();
      } else {
        Swal.fire({
          icon: "error",
          title: "Error",
          text: data.message,
          confirmButtonText: "OK",
        });
      }
    } catch (error) {
      console.error("Error initiating Razorpay payment:", error);
      Swal.fire({
        title: "Error",
        text: "An error occurred while processing the payment.",
        icon: "error",
        confirmButtonText: "OK",
      });
    }
  }

  async function processWalletPayment(addressId, cartId, paymentMethod, couponCode, subtotal, couponDiscount, finalTotal) {
    try {
      const response = await fetch("/walletPayment", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({
          addressId,
          cartId,
          paymentMethod,
          couponCode,
          subtotal,
          couponDiscount,
          finalAmount: finalTotal
        }),
      });

      const data = await response.json();
      if (data.success) {
        Swal.fire({
          title: "Payment Success",
          text: "Order Placed Successfully.",
          icon: "success",
          confirmButtonText: "OK",
        }).then(() => (window.location.href = "/order-confirmation"));
      } else {
        Swal.fire({
          icon: "error",
          title: "Payment Failed",
          text: data.message || "Payment failed. Please try again.",
          confirmButtonText: "OK",
        });
      }
    } catch (error) {
      console.error("Error processing wallet payment:", error);
      Swal.fire({
        title: "Error",
        text: "An error occurred while processing the wallet payment.",
        icon: "error",
        confirmButtonText: "OK",
      });
    }
  }
  });
