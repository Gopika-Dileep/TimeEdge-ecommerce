<%-include("../../views/partials/user/header") %>

<head>

     <style>
body {
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 0;
    line-height: 1.6;
    box-sizing: border-box;
}

h1, h2, h3 {
    margin: 0.5em 0;
}

button {
    cursor: pointer;
    padding: 0.5em 1em;
    border: none;
    border-radius: 5px;
    background-color: #007bff;
    color: #fff;
    font-size: 1em;
}

button:hover {
    background-color: #0056b3;
}

body {
    padding: 1em;
    background-color: #f9f9f9;
}

section {
    margin-bottom: 2em;
    background: #fff;
    padding: 1em;
    border-radius: 5px;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
}

#saved-addresses .address {
    border: 1px solid #ddd;
    padding: 1em;
    margin-bottom: 1em;
    border-radius: 5px;
    background-color: #f1f1f1;
}

#saved-addresses .address button {
    margin-right: 0.5em;
}

table {
    width: 100%;
    border-collapse: collapse;
    margin-bottom: 1em;
}

table th, table td {
    text-align: left;
    padding: 0.5em;
    border: 1px solid #ddd;
}

p {
    margin: 0.5em 0;
}

#coupons-section {
    display: flex;
    flex-direction: column;
}

#coupon-code {
    padding: 0.5em;
    margin-bottom: 0.5em;
    border: 1px solid #ddd;
    border-radius: 5px;
}

#payment-options div {
    margin-bottom: 0.5em;
}

#place-order {
    width: 100%;
    padding: 1em;
    font-size: 1.2em;
    background-color: #28a745;
}

#place-order:hover {
    background-color: #218838;
}

@media (min-width: 768px) {
    body {
        padding: 2em;
    }

    section {
        padding: 2em;
    }

    #coupons-section {
        flex-direction: row;
        align-items: center;
    }

    #coupon-code {
        flex: 1;
        margin-right: 1em;
    }

    #apply-coupon {
        flex-shrink: 0;
    }
}

@media (min-width: 1024px) {
    #saved-addresses {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 1em;
    }

    #order-summary {
        display: grid;
        grid-template-columns: 2fr 1fr;
        gap: 1em;
    }

    #order-summary table {
        grid-column: span 2;
    }
}


     </style>
</head>
<body>
    <h1>Checkout</h1>

    <section id="address-section">
        <h2>Delivery Address</h2>
        <div id="saved-addresses">
            <% address.forEach(address => { %>
                <% address.address.forEach(addr => { %>
                    <div class="address">
                        <input type="radio" name="deliveryAddress" value="<%= addr._id %>" id="address-<%= addr._id %>">
                        <p><strong><%= addr.name %></strong></p>
                        <p>
                            <%= addr.landMark %>, 
                            <%= addr.city %>, 
                            <%= addr.state %>, 
                            <%= addr.pincode %>
                        </p>
                        <button class="edit-address" data-id="<%= addr._id %>">Edit</button>
                    </div>
                <% }) %>
            <% }) %>
            
        </div>
        <a href="/addAddress" class="btn btn-primary">Add New Address</a>

    </section>

    <hr>

    <section id="order-summary">
        <h2>Order Summary</h2>
        <table>
            <thead>
                <tr>
                    <th>Item</th>
                    <th>Quantity</th>
                    <th>Price</th>
                </tr>
            </thead>
            <tbody>
                <% cart.forEach(item => { %>
                    <tr>
                        <td><%= item.product.productName %></td>
                        <td><%= item.quantity %></td>
                        <td>₹<%= (item.price * item.quantity).toFixed(2) %></td>
                    </tr>
                    <% }) %>
                    <span hidden id="cart-id"><%= cartId %></span>
            </tbody>
        </table>
        <p>Subtotal: ₹<%= total.toFixed(2) %></p>
        <!-- <p>Shipping: $10.00</p>
        <p>Discount: $5.00</p> -->
        <!-- <p><strong>Total: $</strong></p> -->
    </section>

    <hr>

    <section id="coupons-section">
        <h2>Apply Coupon</h2>
        <input type="text" id="coupon-code" placeholder="Enter coupon code">
        <button id="apply-coupon">Apply</button>
    </section>

    <hr>

    <section id="payment-options">
        <h2>Payment Options</h2>
        <div>
            <input type="radio" id="cod" name="payment-method" value="cash-on-delivery">
            <label for="cod">Cash on Delivery</label>
        </div>
        <!-- <div>
            <input type="radio" id="razorpay" name="payment-method" value="razorpay">
            <label for="razorpay">Razorpay</label>
        </div> -->
    </section>


    <button class="place-order" id="place-order">Place Order</button>


    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>


    <script>
  $('.edit-address').click(function() {
    const addressId = $(this).data('id');
        window.location.href = `/editAddress?id=${addressId}`;
    
})

  $('.add-new-address').click(function() {
    window.location.href = '/addAddress'; 
});

 $('.place-order').click(function() {
    const selectedAddress = document.querySelector('input[name="deliveryAddress"]:checked');
    if (!selectedAddress) {
        Swal.fire({
            title: 'Error',
            text: 'Please select a delivery address.',
            icon: 'error',
            confirmButtonText: 'OK'
        });
        return;
    }
    const addressId = selectedAddress.value;

    const cartId = document.querySelector('#cart-id').innerText;

    const selectedPayment = document.querySelector('input[name="payment-method"]:checked');


    if (!selectedPayment) {
        Swal.fire({
            title: 'Error',
            text: 'Please select a payment method.',
            icon: 'error',
            confirmButtonText: 'OK'
        });
        return;
    }
    const paymentMethod = selectedPayment.value;


    Swal.fire({
        title: 'Order Placed Successfully!',
        text: 'Thank you for your order. You will be redirected shortly.',
        icon: 'success',
        confirmButtonText: 'OK',
        timer: 3000, 
        timerProgressBar: true
    }).then(() => {
        $.ajax({
            url: '/create-order',
            method: 'POST',
            contentType: 'application/json',
            data: JSON.stringify({
                addressId: addressId,
                cartId: cartId,
                paymentMethod: paymentMethod,
            }),
            success: function(data) {
                console.log(data.orderId)
                window.location.href = `/order-confirmation?orderId=${data.orderId}`; 
},
            error: function(error) {
                
                Swal.fire({
                    title: 'Error',
                    text: 'An error occurred while placing your order.',
                    icon: 'error',
                    confirmButtonText: 'OK'
                });
            }
        });
    });
});

 </script>
</body>

</html>
<%-include("../../views/partials/user/footer") %>
