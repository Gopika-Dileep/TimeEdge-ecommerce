<%-include("../../views/partials/user/header") %>

<head>
   <title>Shopping Cart</title> 
   <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@10/dist/sweetalert2.min.css"> 

   
   <style> 
body, html {
    margin: 0;
    padding: 0;
    height: 100%; /* Ensures the page takes the full height */
    font-family: Arial, sans-serif;
    background-color: #f8f9fa;
}

.cart-container {
    min-height: 100vh; /* Ensures the container takes the full height */
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: center;
    padding: 20px;
    background-color: #ffffff;
    box-shadow: 0px 2px 10px rgba(0, 0, 0, 0.1);
}

.cart-header {
    text-align: center;
    margin-bottom: 20px;
}

.cart-header h1 {
    font-size: 28px;
    color: #333;
    margin: 0;
}

.cart-items {
    width: 100%;
    max-width: 900px;
}

.cart-item {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 15px;
    margin-bottom: 10px;
    border-bottom: 1px solid #ddd;
    background-color: #f9f9f9;
    border-radius: 5px;
    box-shadow: 0px 1px 5px rgba(0, 0, 0, 0.1);
}

.cart-item img {
    width: 100px;
    height: 100px;
    object-fit: cover;
    border-radius: 5px;
    margin-right: 15px;
}

.item-details {
    flex: 1;
}

.item-details h3 {
    font-size: 18px;
    margin: 0;
    color: #444;
}

.item-details p {
    font-size: 14px;
    color: #777;
    margin: 5px 0 0;
}

.quantity-controls {
    display: flex;
    align-items: center;
    gap: 10px;
}

.quantity-controls button {
    background-color: #007bff;
    color: white;
    border: none;
    padding: 5px 10px;
    border-radius: 3px;
    cursor: pointer;
    font-size: 16px;
}

.quantity-controls span {
    font-size: 16px;
    font-weight: bold;
}

.quantity-controls button:hover {
    background-color: #0056b3;
}

.item-price {
    font-size: 18px;
    font-weight: bold;
    color: #333;
}

.btn-remove {
    font-size: 18px;
    color: #dc3545;
    cursor: pointer;
}

.btn-remove:hover {
    color: #a71d2a;
}

.empty-cart {
    text-align: center;
    color: #666;
    font-size: 20px;
    margin: 50px 0;
}

.cart-footer {
    margin-top: 20px;
    width: 100%;
    max-width: 900px;
    text-align: right;
}

.total-price {
    font-size: 24px;
    font-weight: bold;
    color: #333;
}

.btn-checkout {
    background-color: #28a745;
    color: white;
    border: none;
    padding: 10px 20px;
    font-size: 16px;
    border-radius: 3px;
    cursor: pointer;
}

.btn-checkout:hover {
    background-color: #218838;
}

    </style>
</head>
<body>
    <div class="cart-container">
        <div class="cart-header">
            <h1>Shopping Cart</h1>
        </div>
        <div class="cart-items">
            <% if (typeof cart !== 'undefined' && cart.items && cart.items.length > 0) { %>
                <% cart.items.forEach(item => { %>
                    <div class="cart-item">
                        <img src="<%= item.product.productImage && item.product.productImage.length > 0 ? '/uploads/productImages/' + item.product.productImage[0] : '/uploads/productImages/default.png' %>" alt="<%= item.product.productName %>">
                        <div class="item-details">
                            <h3><%= item.product.productName %></h3>
                            <p><%= item.product.description %></p>
                        </div>
                        <div class="quantity-controls">
                            <button onclick="decreaseQuantity('<%= item._id %>')">−</button>
                            <span><%= item.quantity %></span>
                            <button onclick="increaseQuantity('<%= item._id %>')">+</button>
                        </div>
                        <div class="item-price">
                            <% 
                            const salePrice=item.product.salePrice
                            const productOffer = item.product.productOffer||0
                            const categoryOffer = item.product.category.categoryOffer||0
                            const bestOffer = Math.max(productOffer,categoryOffer)
                            const finalPrice = bestOffer > 0 ? Math.floor((salePrice - (salePrice * bestOffer / 100)) * item.quantity) : salePrice * item.quantity;
                              %>  
                           <span>₹<%= finalPrice %></span></div>
                        <div class="btn-remove" onclick="removeItem('<%= item._id %>')">
                            <i class="bi bi-trash"></i>
                        </div>
                    </div>
                <% }) %>
                <div class="cart-footer">
                    <div class="total-price">
                        <h3>Total: ₹<%= totalPrice %></h3>
                    </div>
                    <button id="btn-checkout" class="btn-checkout">Proceed to Checkout</button>
                </div>
            <% } else { %>
                <div class="empty-cart">
                    <h3>Your cart is empty!</h3>
                </div>
            <% } %>
        </div>
    </div>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script> 
    <script>
       
       function increaseQuantity(itemId) {
    $.ajax({
        url: `/increment/${itemId}`,
        type: 'PATCH',
        contentType: 'application/json',
        success: function (result) {
            if (result.success) {
                location.reload(); 
            } else {
                alert(result.message);
            }
        },
        error: function (xhr, status, error) {
            console.error('Error incrementing quantity:', error);
            alert('Something went wrong. Please try again later.');
        },
    });
}



function decreaseQuantity(itemId) {
    $.ajax({
        url: `/decrement/${itemId}`,
        type: 'PATCH',
        contentType: 'application/json',
        success: function (result) {
            if (result.success) {
                location.reload();
            } else {
                alert(result.message);
            }
        },
        error: function (xhr, status, error) {
            console.error('Error decrementing quantity:', error);
            alert('Something went wrong. Please try again later.');
        },
    });
}


function removeItem(itemId) {
    Swal.fire({
        title: 'Are you sure?',
        text: 'Do you want to remove this item from the cart?',
        icon: 'warning',
        showCancelButton: true,
        confirmButtonText: 'Yes, remove it!',
        cancelButtonText: 'No, keep it',
    }).then((confirmation) => {
        if (confirmation.isConfirmed) {
            $.ajax({
                url: `/remove/${itemId}`,
                type: 'POST',
                contentType: 'application/json',
                success: function (result) {
                    if (result.success) {
                        Swal.fire('Removed!', 'The item has been removed from your cart.', 'success').then(() => {
                            location.reload();
                        });
                    } else {
                        alert(result.message);
                    }
                },
                error: function (xhr, status, error) {
                    console.error('Error removing item:', error);
                },
            });
        }
    });
}
$(document).ready(function () {
    $('#btn-checkout').on('click', function () {
      $.ajax({
        url: '/checkout', 
        type: 'GET',
        success: function (response) {
            window.location.href = '/checkout';
          console.log('Checkout successful:', response);
        },
        error: function (xhr, status, error) {
          console.error('Error during checkout:', status, error);
         
        },
      });
    });
  });

    </script>
</body>
</html>
<%- include("../../views/partials/user/footer") %>
