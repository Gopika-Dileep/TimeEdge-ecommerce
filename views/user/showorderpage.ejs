    <div class="order-details-card">
        <div class="order-header">
            <h2>Order <span class="order-id">#<%= order._id %></span></h2>
        </div>

        <div class="clearfix">
            <!-- Left side: Order details and payment -->
            <div class="order-details-table">
                <div class="detail-row">
                    <h3>Order Details</h3>
                    <p>Order Date: <%= order.createdOn.toLocaleDateString() %>
                    </p>
                    <p>Total: ₹<%= order.finalAmount.toFixed(2) %>
                    </p>
                    <!-- Changed from status-indicator to order-status to match CSS -->
                    <div class="order-status">
                        <span class="status-dot <%= order.status.toLowerCase().replace(' ', '-') %>"></span>
                        <%= order.status %>
                    </div>
                </div>

                <div class="payment-info">
                    <h3>Payment Information</h3>
                    <p>
                        <%= order.paymentMethod %>
                    </p>
                </div>
            </div>

            <!-- Right side: Shipping address -->
            <div class="shipping-address">
                <h3>Shipping Address</h3>
                <p>
                    <%= specificAddress.name %>
                </p>
                <p>
                    <%= specificAddress.addressType %>
                </p>
                <p>
                    <%= specificAddress.city %>, <%= specificAddress.state %>
                            <%= specificAddress.pincode %>
                </p>
            </div>
        </div>

        <!-- Order items -->
        <div class="order-items" data-order-id="<%= order._id %>">
            <% order.orderedItems.forEach((item)=> { %>
                <div class="item-card" data-item-id="<%= item._id %>">
                    <img src="/uploads/productImages/<%= item.products.productImage[0] %>" alt="<%= item.products.productName %>">
                    <div class="item-details">
                        <div class="item-info">
                            <h4>
                                <%= item.products.productName %>
                            </h4>
                            <p class="item-price">Quantity: <%= item.quantity %> | Price: ₹<%= item.price.toFixed(2) %>
                            </p>
                            <!-- Updated status styling -->
                            <span class="status <%= item.status.toLowerCase().replace(' ', '-') %>">
                                <span class="status-dot <%= item.status.toLowerCase().replace(' ', '-') %>"></span>
                                <%= item.status %>
                            </span>
                            <% if (item.cancelReason) { %>
                                <p class="cancel-reason">
                                    <%= item.cancelReason %>
                                </p>
                                <% } %>
                        </div>
                        <% if (!item.cancelReason && !['cancelled', 'delivered' , 'returned'
                            ].includes(item.status.toLowerCase())) { %>
                            <button class="item-cancel-btn" onclick="showCancelModal('<%= item._id %>')">Cancel</button>
                            <% } %>
                    </div>
                </div>
                <% }); %>
        </div>
    </div>
    </div>
    </div>
    </div>
    </div>

    <div id="cancelModal" class="modal">
        <div class="modal-content">
            <h3>Cancellation Reason</h3>
            <textarea id="cancelReason" placeholder="Please provide a reason for cancellation"></textarea>
            <div class="modal-buttons">
                <button id="confirmCancel" class="confirm-btn">Confirm</button>
                <button id="closeModal" class="close-btn">Close</button>
            </div>
        </div>
    </div>

    <script>
        let currentItemId = null;

        function showCancelModal(itemId) {
            currentItemId = itemId;
            document.getElementById('cancelModal').style.display = 'block';
            document.getElementById('cancelReason').value = '';
        }

        document.addEventListener('DOMContentLoaded', function () {
            const modal = document.getElementById('cancelModal');
            const closeBtn = document.getElementById('closeModal');
            const confirmBtn = document.getElementById('confirmCancel');
            const reasonText = document.getElementById('cancelReason');

            closeBtn.onclick = function () {
                modal.style.display = "none";
            }

            window.onclick = function (event) {
                if (event.target == modal) {
                    modal.style.display = "none";
                }
            }

            confirmBtn.onclick = function () {
                const reason = reasonText.value;
                if (!reason.trim()) {
                    alert('Please provide a reason for cancellation');
                    return;
                }

                // const orderId =  window.location.pathname.split('/')[2];
                const orderItemsContainer = document.querySelector('.order-items');
                const orderId = orderItemsContainer.getAttribute('data-order-id');

                fetch(`/orders/${orderId}/cancel-item`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        itemId: currentItemId,
                        reason: reason
                    })
                })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            window.location.reload();
                        }
                    })
                    .catch(error => {
                        console.error('Error:', error);
                        alert('Failed to cancel item. Please try again.');
                    });
            }
        });
    </script>

