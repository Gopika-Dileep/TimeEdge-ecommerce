        .clearfix::after {
            content: "";
            clear: both;
            display: table;
        }

        /* Order items styles */
        .order-items {
            margin-top: 24px;
            clear: both;
            padding-top: 24px;
        }

        .item-card {
            display: flex;
            gap: 16px;
            padding: 16px;
            background: #f8f9fa;
            border-radius: 6px;
            margin-bottom: 12px;
        }

        .item-card img {
            width: 80px;
            height: 80px;
            object-fit: cover;
            border-radius: 4px;
        }

