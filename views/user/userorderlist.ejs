<div style="display: flex; background-color: #f8fafc;">
  <%-include("../../views/partials/user/profile-sidebar") %>
<div style="width: 100%; padding-right: 40px; margin-top: 40px;">
<table>
  <thead>
    <tr>
      <th>Order ID</th>
      <th>Order Date</th>
      <th>Status</th>
      <th>Total Amount</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% orders.forEach(item=> { %>
    <tr>
      <td><%=item.orderId %></td>
      <td><%= item.createdOn.toLocaleDateString()%></td>
      <td><span class="status <%= item.status.toLowerCase().replace(' ', '-') %>"><%= item.status %></span></td>
      <td><%= item.finalAmount%></td>
      <td><a href="/orders-details?id=<%= item._id%>" class="view-btn">View Details</a></td>
    </tr>
    <% }); %>
  </tbody>
</table>

<div class="pagination">
  <% 
    const searchParam = typeof search !== 'undefined' && search ? `&search=${search}` : '';
    const prevPage = currentpage > 1 ? currentpage - 1 : 1;
    const nextPage = currentpage < totalpage ? currentpage + 1 : totalpage;
  %>
  
  <% if (currentpage > 1) { %>
    <a href="?page=<%= prevPage %><%= searchParam %>" class="btn">
      <i class="bi bi-chevron-left"></i> Previous
    </a>
  <% } %>

  <div class="page-numbers">
    <% 
      let startPage = Math.max(1, currentpage - 2);
      let endPage = Math.min(totalpage, startPage + 4);
      
      if (endPage - startPage < 4) {
        startPage = Math.max(1, endPage - 4);
      }
      
      if (startPage > 1) { %>
        <a href="?page=1<%= searchParam %>">1</a>
        <% if (startPage > 2) { %>
          <span>...</span>
        <% } %>
    <% } %>

    <% for(let i = startPage; i <= endPage; i++) { %>
      <a href="?page=<%= i %><%= searchParam %>" 
         class="<%= (i === currentpage) ? 'active' : '' %>">
        <%= i %>
      </a>
    <% } %>

    <% if (endPage < totalpage) { %>
      <% if (endPage < totalpage - 1) { %>
        <span>...</span>
      <% } %>
      <a href="?page=<%= totalpage %><%= searchParam %>">
        <%= totalpage %>
      </a>
    <% } %>
  </div>

  <% if (currentpage < totalpage) { %>
    <a href="?page=<%= nextPage %><%= searchParam %>" class="btn">
      Next <i class="bi bi-chevron-right"></i>
    </a>
  <% } %>
</div>

<style>
.pagination {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 2rem;
  gap: 1rem;
}

.page-numbers {
  display: flex;
  gap: 0.5rem;
}

.page-numbers a {
  padding: 0.5rem 1rem;
  border: 1px solid #ddd;
  border-radius: 4px;
  text-decoration: none;
  color: inherit;
}

.page-numbers a.active {
  background: #79b928;
  color: white;
  border-color: #79b928;
}

.page-numbers a:hover:not(.active) {
  background: #f5f5f5;
}

.pagination button {
  padding: 0.5rem 1rem;
  border: 1px solid #ddd;
  background: white;
  border-radius: 4px;
  cursor: pointer;
}

.pagination button:disabled {
  background: #f5f5f5;
  cursor: not-allowed;
}
</style>

