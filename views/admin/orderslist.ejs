<%- include("../../views/partials/admin/header") %>

<style>
    /* General Reset */
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
  font-family: Arial, sans-serif;
}

body {
  background-color: #f4f4f9;
  color: #333;
  padding: 20px;
}

.container {
  max-width: 1200px;
  margin: auto;
  background: #fff;
  border-radius: 8px;
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  padding: 20px;
}

h1 {
  margin-bottom: 20px;
  text-align: center;
  color: #444;
}

.orders-table {
  width: 100%;
  border-collapse: collapse;
  margin-top: 20px;
}

.orders-table thead tr {
  background-color: #444;
  color: #fff;
}

.orders-table th,
.orders-table td {
  padding: 10px;
  text-align: left;
  border: 1px solid #ddd;
}

.orders-table tbody tr:nth-child(even) {
  background-color: #f9f9f9;
}

.orders-table tbody tr:hover {
  background-color: #f1f1f1;
}

.status {
  font-weight: bold;
  padding: 5px 10px;
  border-radius: 5px;
  text-align: center;
}

.status.pending {
  color: #ff9800;
  background-color: #fff3e0;
}

.status.shipped {
  color: #2196f3;
  background-color: #e3f2fd;
}

.status.delivered {
  color: #4caf50;
  background-color: #e8f5e9;
}

.btn {
  padding: 6px 12px;
  border: none;
  border-radius: 4px;
  cursor: pointer;
  font-size: 14px;
  margin-right: 5px;
}

.btn.view {
  background-color: #03a9f4;
  color: #fff;
}

.btn.view:hover {
  background-color: #0288d1;
}

.btn.update {
  background-color: #4caf50;
  color: #fff;
}

.btn.update:hover {
  background-color: #388e3c;
}

@media screen and (max-width: 768px) {
  .orders-table thead {
    display: none;
  }

  .orders-table tr {
    display: block;
    margin-bottom: 20px;
  }

  .orders-table td {
    display: block;
    text-align: right;
    padding: 10px;
    border: none;
  }

  .orders-table td::before {
    content: attr(data-label);
    float: left;
    text-transform: uppercase;
    font-weight: bold;
    color: #444;
  }

  .orders-table tbody tr:nth-child(even) {
    background-color: transparent;
  }
}
.container {
        position: absolute;
        top: 70px;
        left: 240px;
        width: calc(100% - 240px);
        padding: 2rem;
    }
    @media (max-width: 1000px) {
        .container {
        position: absolute;
        top: 50px;
        left: 20px;
        width: calc(100% - 30px);
        padding: 2rem;
    }
    }
</style>

<body>
    <div class="container">
      <h1>Orders List</h1>
      <table class="orders-table">
        <thead>
          <tr>
            <th>User</th>
            <th>Products</th>
            <th>Quantity</th>
            <th>Total Price</th>
            <th>Status</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
            <% orders.forEach(order => { %>
              <tr>
                
                <td>
                  <p><strong>Name:</strong> <%= order.user?.name %></p>
                  <p><strong>Email:</strong> <%= order.user?.email  %></p>
                </td>
                
              
                <td>
                  <% order.orderedItems.forEach(item => { %>
                    <p><strong>Product:</strong> <%= item.products ? item.products.productName : 'Product Not Found' %></p>
                  <% }); %>
                </td>
    
             
                <td>
                  <% order.orderedItems.forEach(item => { %>
                    <p><%= item.quantity %></p>
                  <% }); %>
                </td>
                
               
                <td>$<%= order.finalAmount %></td>
    
              
                <td class="status <%= order.status.toLowerCase() %>">
                  <%= order.status %>
                </td>
    
                <td>
                  <a href="/admin/orders/<%= order._id %>" class="btn btn-outline-primary btn-sm">
                      View Details
                  </a>

                 
                  <form action="/admin/orders/<%= order._id %>/status" method="POST" class="d-inline">
                      <select name="status" class="form-select form-select-sm d-inline w-auto">
                          <option value="Pending" <%= order.status === 'Pending' ? 'selected' : '' %>>Pending</option>
                          <option value="Shipped" <%= order.status === 'Shipped' ? 'selected' : '' %>>Shipped</option>
                          <option value="Delivered" <%= order.status === 'Delivered' ? 'selected' : '' %>>Delivered</option>
                          <option value="Cancelled" <%= order.status === 'Cancelled' ? 'selected' : '' %>>Cancelled</option>
                      </select>
                      <button type="submit" class="btn btn-primary btn-sm">Update</button>
                  </form>
              </td>
          </tr>
              </tr>
            <% }); %>
          </tbody>
      </table>
    </div>
  </body>
  <%- include("../../views/partials/admin/footer") %>
